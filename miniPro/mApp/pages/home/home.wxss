/* Below is for images swiper on home page */

.banner {
  width: 750rpx;
  height: 417rpx;
}

.banner image {
  width: 100%;
  height: 417rpx;
}

/* Below is for hot songs */

.a-section {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
  color: #333;
  /* margin-top: 20rpx; */
}

.a-section .h {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
  height: 130rpx;
  /* background-color:olivedrab;  */
  background: linear-gradient(141deg, #fff 20%, #1fc8db 51%, #fff 80%);
}

.a-section .h .txt {
  color: white;
  padding-right: 30rpx;
  /* background: url("http://ac-3yr0g9cz.clouddn.com/2cdba05369e10f934e54.png") right 4rpx no-repeat;  */
  background-size: 16.656rpx 27rpx;
  display: inline-block;
  height: 36rpx;
  font-size: 33rpx;
  line-height: 36rpx;
}

.a-popular {
  width: 750rpx;
  height: auto;
  overflow: hidden;
}

.a-popular .b .item {
  border-top: 1px solid #d9d9d9;
  margin: 0 20rpx;
  height: 150rpx;
  width: 710rpx;
}

.a-popular .b .item .hotsong-container {
  padding: 0 15rpx 0 15rpx;
  margin-top: 25rpx;
  float: left;
}

.a-popular .b .item .hotsong-img {
  margin: 0 auto;
  width: 50rpx;
  height: 50rpx;
  display: block;
}

.a-popular .b .item .hotsong-txt-box {
  width: 85rpx;
  text-align: center;
}

.a-popular .b .item .hotsong-txt {
  font-size: 30rpx;
  line-height: 50rpx;
}

.a-popular .b .img {
  margin-top: 12rpx;
  margin-right: 12rpx;
  float: left;
  width: 120rpx;
  height: 120rpx;
  /* width: 240rpx;
  height: 240rpx; */
}

.a-popular .b .right {
  float: left;
  height: 150rpx;
  width: 380rpx;
  /* width: 456rpx; */
  display: flex;
  flex-flow: row nowrap;
}

.a-popular .b .text {
  display: flex;
  flex-wrap: nowrap;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
  height: 150rpx;
  width: 380rpx;
  /* width: 456rpx; */
}

.a-popular .b .name {
  width: 380rpx;
  /* width: 456rpx; */
  display: block;
  color: #333;
  line-height: 50rpx;
  font-size: 33rpx;
}

.a-popular .b .desc {
  width: 380rpx;
  /* width: 456rpx; */
  display: block;
  color: #999;
  line-height: 50rpx;
  font-size: 25rpx;
}

.a-popular .b .singer {
  width: 380rpx;
  /* width: 456rpx; */
  display: block;
  color: #b4282d;
  line-height: 50rpx;
  font-size: 30rpx;
}
