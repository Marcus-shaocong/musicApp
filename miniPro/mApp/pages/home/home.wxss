/* pages/home/home.wxss */
.banner {
  width: 750rpx;
  height: 417rpx;
}

.banner image {
  width: 100%;
  height: 417rpx;
}

.pro-item{
  overflow: hidden;
  padding: 30rpx;
}
.pro-logo{
  float: left;
  width: 190rpx;
  height: 190rpx;
}
.pro-body{
  width:100%
}
.pro-title{
  color: #212121;
  font-size: 37rpx;
  line-height: 1.3;
}
.pro-desc{
  font-size: 27rpx;
  color: #9a9a0a;
  line-height: 3.7;
}
.pro-footer{
  overflow: hidden;
}
.pro-footer .btn-detail{
  float: left;
  width: 170rpx;
  height: 52rpx;
}
.btn-ask{
  float: left;
  width: 224rpx;
  height: 52rpx;
  margin-left: 20rpx;
  padding: 0;
  line-height: 1;
}
.btn-ask image{
  width: 100%;
  height: 52rpx;
}


.a-section {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  background: #fff;
  color: #333;
  margin-top: 20rpx;
}

.a-section .h {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
  height: 130rpx;
}

.a-section .h .txt {
  padding-right: 30rpx;
  /*background: url("http://ac-3yr0g9cz.clouddn.com/2cdba05369e10f934e54.png") right 4rpx no-repeat;*/
  background-size: 16.656rpx 27rpx;
  display: inline-block;
  height: 36rpx;
  font-size: 33rpx;
  line-height: 36rpx;
}

.a-popular {
  width: 750rpx;
  height: auto;
  overflow: hidden;
}

.a-popular .b .item {
  border-top: 1px solid #d9d9d9;
  margin: 0 20rpx;
  height: 150rpx;
  width: 710rpx;
}

.a-popular .b .img {
  margin-top: 12rpx;
  margin-right: 12rpx;
  float: left;
  width: 120rpx;
  height: 120rpx;
  /* width: 240rpx;
  height: 240rpx; */
}

.a-popular .b .right {
  float: left;
  height: 150rpx;
  width: 400rpx;
  /* width: 456rpx; */
  display: flex;
  flex-flow: row nowrap;
}

.a-popular .b .text {
  display: flex;
  flex-wrap: nowrap;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
  height: 150rpx;
  width: 400rpx;
  /* width: 456rpx; */
}

.a-popular .b .name {
  width: 400rpx;
  /* width: 456rpx; */
  display: block;
  color: #333;
  line-height: 50rpx;
  font-size: 30rpx;
}

.a-popular .b .desc {
  width: 400rpx;
  /* width: 456rpx; */
  display: block;
  color: #999;
  line-height: 50rpx;
  font-size: 25rpx;
}

.a-popular .b .price {
  width: 400rpx;
  /* width: 456rpx; */
  display: block;
  color: #b4282d;
  line-height: 50rpx;
  font-size: 33rpx;
}