<swiper class="banner" indicator-dots="true" autoplay="true" interval="3000" duration="1000">
  <swiper-item wx:for="{{banner}}" wx:key="id">
    <!-- <navigator url="{{item.link}}"> -->
    <image src="{{item.url}}" background-size="cover"></image>
    <!-- </navigator> -->
  </swiper-item>
</swiper>

<view class="a-section a-popular">
  <view class="h">
    <view>
      <!-- navigator url="" -->
        <text class="txt">人气推荐</text>
      <!-- /navigator -->
    </view>
  </view>
  <view class="b">
    <view class="item" wx:for="{{hotSongs}}" wx:for-index="index" wx:for-item="item" wx:key="id">
      <view>
        <image class="img" src="{{item.listPicUrl}}" background-size="cover"></image>
        <view class="right">
          <view class="text">
            <text class="name">{{item.name}}</text>
            <text class="singer">{{item.singer}}</text>
          </view>
        </view>
        <navigator class="hotsong-container" url="/pages/playbg/playbg?id={{item.id}}">
          <image class="play-img hotsong-img" src="../../images/icons/address_right.png"></image>
          <view>
            <text class="hotsong-txt">学习</text>
          </view>
        </navigator>
        <view class="hotsong-container" bindtap="onLikeSong">
          <image id="{{item.id}}" class="like-img hotsong-img" src="../../images/icons/icon_collect.png"></image>
          <view>
            <text class="hotsong-txt">收藏</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>